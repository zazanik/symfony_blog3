
<div class="overlay js-popup-login-overlay hidden">

    <div id="js-login-popup" class="authorization-popup">

        <form action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}

            <label for="username">Username</label>
            <input type="text" id="username" class="text-input" name="_username" value="{{ last_username }}" required="required" />

            <label for="password">Password</label>
            <input type="password" id="password" class="text-input" name="_password" required="required" />

            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">Remember me?</label>

            <button type="submit" id="_submit" name="_submit">Login</button>
        </form>

    </div>

</div>

